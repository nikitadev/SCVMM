@model VMMonitoringWebApplication.Models.ServerModel

<div class="panel-heading">
    <h3 class="panel-title">Cloud name is...</h3>
</div>
<section class="panel-body">
    @using (Html.BeginForm("JsonAddServer", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "setServerForm", role = "form", @class = "form-inline" }))
    {
        <fieldset>
            <legend>Input Server Form</legend>
            <div class="form-group">
                @*@Html.LabelFor(m => m.Name)*@
                @Html.TextBoxFor(m => m.Name, new { autofocus = "autofocus", id = "serverName", @class = "form-control", placeholder = "Enter server name" })
                @*@Html.ValidationMessageFor(m => m.Name)*@
            </div>
            <input type="submit" class="btn btn-primary" value="Accept" />
            <div class="form-group">
                @Html.ValidationSummary()
            </div>
        </fieldset>
    }
</section>